{
	"swagger": "2.0",
	"info": {
		"title": "DioderPi API",
		"version": "1.0"
	},
	"consumes": [ "application/json" ],
	"produces": [ "application/json" ],
	"basePath": "/api",
	"paths": {
		"/banks": {
			"get": {
				"x-mojo-to": "banks#list",
				"summary": "List all available RGB light banks and their current color value",
				"responses": {
					"200": {
						"description": "Success",
						"schema": {
							"$ref": "#/definitions/Banks"
						}
					}
				}
			}
		}
	},
	"definitions": {
		"Banks": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/Bank"
			}
		},
		"Bank": {
			"type": "object",
			"required": [ "name", "rgb" ],
			"properties": {
				"name": {
					"type": "string"
				},
				"rgb": {
					"type": "array"
				}
			}
		}
	}
}
