{
	"swagger": "2.0",
	"info": {
		"title": "DioderPi API",
		"version": "1.0"
	},
	"consumes": [ "application/json" ],
	"produces": [ "application/json" ],
	"basePath": "/api",
	"paths": {
		"/banks": {
			"get": {
				"x-mojo-to": "banks#list",
				"summary": "List all available RGB light banks and their current color value",
				"responses": {
					"200": {
						"description": "Success",
						"schema": {
							"$ref": "#/definitions/banks"
						}
					}
				}
			}
		}
	},
	"definitions": {
		"banks": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/bank"
			}
		},
		"bank": {
			"type": "object",
			"required": [ "name", "rgb" ],
			"properties": {
				"name": {
					"type": "string"
				},
				"rgb": {
					"$ref": "#/definitions/rgbValue"
				}
			}
		},
		"rgbValue": {
			"type": "array",
			"minItems": 3,
			"maxItems": 3,
			"items": {
				"$ref": "#/definitions/colorChannel"
			}
		},
		"colorChannel": {
			"type": "integer",
			"minimum": 0,
			"maximum": 255
		}
	}
}
